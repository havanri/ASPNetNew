@using ASPWebsiteShopping.Data
@{
    Layout = "/Views/Layouts/_Admin.cshtml";
    ViewData["Title"] = "Quyền";
}
@section Script {

	}
@model UserClaimsViewModel
<div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <!-- /.content-header -->
        <!-- Main content -->
                <form method="post" formaction="ManagerUserClaims">
            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <input type="hidden" asp-for="@Model.UserId"/>
                            @for(int i=0;i<Model.Claims.Count;i++){
                                     <div class="form-check">
                          <input type="hidden" asp-for="@Model.Claims[i].ClaimType">
                          <input class="form-check-input" type="checkbox" asp-for="@Model.Claims[i].IsSelected">
                          <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                                    @Model.Claims[i].ClaimType
                      </label>
            </div>
                            }
                                  
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                    <!-- /.col-md-6 -->
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
    </form>
    <!-- /.content -->
</div>