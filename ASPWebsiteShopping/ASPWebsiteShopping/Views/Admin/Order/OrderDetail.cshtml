
@{
    Layout = "/Views/Layouts/_Admin.cshtml";
    ViewData["Title"] = "Chi tiết hóa đơn";
}

@model OrderViewModel
<section class="h-100 gradient-custom">
  <div class="container py-5 h-100 " style="padding-top: 1rem!important;">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-10 col-xl-8">
        <div class="card" style="border-radius: 10px;">
          
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <p class="lead fw-normal mb-0" style="color: #a8729a;">Đơn hàng</p>
              <p class="small text-muted mb-0">Mã đơn hàng : #@Model.Order.Id</p>
            </div>
            @foreach(var productItem in Model.Products){
                    <div class="card shadow-0 border mb-4">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-2">
                        <img src="/@productItem.FeatureImagePath"
                      class="img-fluid" alt="Phone">
                      </div>
                      <div class="col-md-4 text-center d-flex justify-content-center align-items-center">
                            <p class="text-muted mb-0">@productItem.Name</p>
                      </div>
                      @foreach (var orderItem in Model.OrderItems)
                      {
                          if(@orderItem.ProductId==@productItem.Id){
                                    <div class="col-md-4 text-center d-flex justify-content-center align-items-center">
                                    <p class="text-muted mb-0 small">SL: @orderItem.Quantity</p>
                                  </div>
                                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                                <p class="text-muted mb-0 small js-money-format">@(@orderItem.Quantity * @productItem.Price)
                                        </p>
                                  </div>
                          }
                      }    
                    </div>                  
                  </div>
                </div>
            }
            

            <div class="d-flex justify-content-between pt-2">
              <p class="fw-bold mb-0">Thông tin chi tiết</p>
            </div>

            <div class="d-flex justify-content-between pt-2">
              <p class="text-muted mb-0">Số điện thoại : @Model.Order.Phone</p>
            </div>

            <div class="d-flex justify-content-between">
              <p class="text-muted mb-0">Ngày :@Model.Order.CreatedAt</p>

            </div>
            <div class="d-flex justify-content-between">
              <p class="text-muted mb-0">Địa chỉ: @Model.Order.DeliveryAddress</p>
            </div>
            
          </div>
          <div class="card-footer border-0 px-4 py-5"
            style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
            <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Tổng tiền: <span class="h2 mb-0 ms-2 js-money-format "> @Model.Order.Total</span></h5>
          </div>
        </div>
      </div>
    </div>
  </div>

</section>


