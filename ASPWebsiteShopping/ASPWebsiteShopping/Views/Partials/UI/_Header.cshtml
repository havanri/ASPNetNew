               @Html.Raw("active-menu")
           }">
							<a asp-controller="Blog" asp-action="Index">Blog</a>
						</li>

						<li class="@if(@ViewContext.RouteData.Values["controller"].Equals("About")){
               @Html.Raw("active-menu")
           }">
							<a asp-controller="About" asp-action="Index">Về Chúng Tôi</a>
						</li>

						<li class="@if(@ViewContext.RouteData.Values["controller"].Equals("Contact")){
               @Html.Raw("active-menu")
           }">
							<a asp-controller="Contact" asp-action="Index">Liên Hệ</a>
						</li>
					</ul>
				</div>

				<!-- Icon header -->
				<div class="wrap-icon-header flex-w flex-r-m">
					<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 js-show-modal-search">
						<i class="zmdi zmdi-search"></i>
					</div>

					<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti js-show-cart" data-notify="2">
						<i class="zmdi zmdi-shopping-cart"></i>
					</div>


					<a href="#" class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti" data-notify="0">
						<i class="zmdi zmdi-favorite-outline"></i>
