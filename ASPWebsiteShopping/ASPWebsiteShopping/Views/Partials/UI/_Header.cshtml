		<div class="wrap-menu-desktop how-shadow1">
			<nav class="limiter-menu-desktop container">

				<!-- Logo desktop -->
				<a asp-controller="Home" asp-action="Index" class="logo">
					<img src="~/lib/cozastore/images/icons/logo-01.png" alt="IMG-LOGO">
				</a>

				<!-- Menu desktop -->
				<div class="menu-desktop">
					<ul class="main-menu ">
						<li class="@if(@ViewContext.RouteData.Values["controller"].Equals("Home")){
               @Html.Raw("active-menu")
           }">
							<a asp-controller="Home" asp-action="Index">Trang Chủ</a>
						</li>

						<li class="@if(@ViewContext.RouteData.Values["controller"].Equals("Shop")){
               @Html.Raw("active-menu")
           }">
							<a asp-controller="Shop" asp-action="Index">Sản Phẩm</a>
						</li>

						@*<li class="label1" data-label1="hot">
						<a href="shoping-cart.html">Features</a>
						</li>*@

